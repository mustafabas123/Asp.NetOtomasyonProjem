    @using OtomasyonProjesi.Models.Classlar;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
            {
                <p>
                    Ürün Adı :  @Html.TextBox("P")
                    <input type="submit" value="Ara" class="btn btn-outline-danger"/>
                </p>
            }
<br />

<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategorisi</th>
        <th>Pasif Yapma</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ProductName</td>
        <td>@item.Mark</td>
        <td>@item.Stock</td>
        <td>@item.BuyingPrice ₺</td>
        <td>@item.SellingPrice ₺</td>
        <td>@item.Category.CategoryName</td>
        <td><a href="/Product/StateFalse/@item.ProductId" class="btn btn-outline-danger">Pasif Yap</a></td>
        <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success">Güncelle</a></td>
        <td><a href="/Product/DoSell/@item.ProductId" class="btn btn-outline-dark">Satış Yap</a></td>
    </tr>
    }
</table>
<a  href="/Product/AddProduct/" class="btn btn-outline-primary">Ürün Ekle</a>

