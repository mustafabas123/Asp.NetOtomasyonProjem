@using OtomasyonProjesi.Models.Classlar
@model List<CargoDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "Cargo", FormMethod.Get))
{
    <p>
        Kargo Takip Kodu :  @Html.TextBox("P")
        <input type="submit" value="Ara" class="btn btn-outline-danger" />
    </p>
}
<br />


<h2>Kargor Detay Sayfası</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Personel</th>
            <th>Alıcı</th>
            <th>Tarih</th>
            <th>Takip Kodu</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Personel</td>
                <td>@item.Receiver</td>
                <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
                <td>@item.TrackingCode</td>
                <td><a href="/Cargo/TracingCargo/@item.TrackingCode" class="btn btn-outline-success">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Cargo/AddCargo/" class="btn btn-outline-warning">Kargo Ekle</a>

