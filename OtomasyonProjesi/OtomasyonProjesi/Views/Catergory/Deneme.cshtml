@model OtomasyonProjesi.Models.Classlar.DropDownListClass 
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>

    $(function () {

        $('#DropDownListCategory').change(function () {

            var id = $('#DropDownListCategory').val();

            $.ajax({

                url: '/Catergory/GetProduct',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DropDownListProduct').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DropDownListProduct').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>



<br />
<div>
    <h2>Ürün Kategoriler</h2>
</div>
<br />
<div>
    @Html.Label("Kategori Ad")
    @Html.DropDownList("DropDownListCategory", Model.Categories, "--- Kategori Seçiniz ---",new {@class="form-control"})
    <br />
    @Html.Label("Ürün Ad")
    @Html.DropDownList("DropDownListProduct",Model.Products,"--- Ürün Seçiniz ---",new {@class="form-control"})
</div>




