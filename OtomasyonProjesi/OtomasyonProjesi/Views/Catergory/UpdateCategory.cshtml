@model OtomasyonProjesi.Models.Classlar.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4>Kategori Güncelleme Sayfası</h4>
<br />
<form method="post">
    @Html.HiddenFor(x=>x.CategoryId)
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x =>x.CategoryName,new {@class="form-control" })
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>

