@using OtomasyonProjesi.Models.Classlar
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>   
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Pasif Yapma</th>
            <th>Güncelleme</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.CustomerId</td>
            <td>@item.CustomerName</td>
            <td>@item.CustomerSurname</td>
            <td>@item.CustomerCity</td>
            <td>@item.CustomerMail</td>
            <td><a href="/Customer/StateFalse/@item.CustomerId" class="btn btn-outline-danger">Pasif Yap</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-primary">Güncelle</a></td>
            <td><a href="/Customer/DetailCustomer/@item.CustomerId" class="btn btn-outline-info">Satış Gecmişi</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Customer/AddCustomer" class="btn btn-outline-success">Müşteri Ekle</a>
